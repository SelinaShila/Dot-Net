@model E_ATM.Models.Accounts
@{
    ViewBag.Title = "CashWithdrawal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cash Withdrawal</h2>

@using (@Html.BeginForm("cashSuccessful", "E_ATM"))
{
    if (Session["msg"] != null)
    {
        <p>@Session["msg"]</p>
        Session["msg"] = null;
    }

    <div class="form-group">
        @Html.Label("Enter your amount")
        @Html.TextBox("amount", 0, new { @class = "form-control" })

    </div>
    <div class="form-group">
        <button type="submit" class="btn-primary">Submit</button>
    </div>
}
@using (@Html.BeginForm("Options", "E_ATM"))
{ 
    <div class="form-group">
        <button type="submit" class="btn-primary">Exit</button>
    </div>
}