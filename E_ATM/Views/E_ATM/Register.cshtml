@model E_ATM.Models.Accounts
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>
@using (@Html.BeginForm("RegisterSuccessful", "E_ATM"))
{

    if (Session["msg"] != null)
    {
        <p>@Session["msg"]</p>
        Session["msg"] = null;
    }


    <div class="form-group">
        @Html.LabelFor(m => m.CardNumber, "Enter Card Number:")

        @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.CardNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PinNumber, "Enter Pin Number:")

        @Html.TextBoxFor(m => m.PinNumber, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.PinNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Balance, "Enter Your Balance:")

        @Html.TextBoxFor(m => m.Balance, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.Balance)
    </div>

    <div class="form-group">
        <button type="submit" class="btn-primary">Register</button>
    </div>
}

@using (@Html.BeginForm("New", "E_ATM"))
{
    <div class="form-group">
        <button type="submit" class="btn-primary">Login</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
