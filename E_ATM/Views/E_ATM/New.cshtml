@model E_ATM.Models.Accounts
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Account Login</h2>
@using (Html.BeginForm("Details", "E_ATM"))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.CardNumber)
        @Html.TextBoxFor(m => m.CardNumber,new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.PinNumber)
        @Html.TextBoxFor(m => m.PinNumber,new {@class="form-control"})
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}


@using (@Html.BeginForm("Register", "E_ATM"))
{
    <div class="form-group">
        <button type="submit" class="btn-primary">Registration</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}